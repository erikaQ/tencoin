block variables
	-var pageClass = "";

block title
	title Tencoin - About us

block content

	.container_center

		// begin .breadcramb
		.breadcrumb
			li
				a(href="#")
					span.icon-house
			li.breadcrumb__separator
				span.icon-arrow
			li
				a(href="#") About us
		// end .breadcramb


		// begin .top
		.top_wrap
			.top
				.top__bg.top__bg_about
				.top__content
